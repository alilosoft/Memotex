<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/item_exercise_slot"
        android:layout_width="wrap_content"
        android:minWidth="120dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="28sp"
        tools:text="Lorem"
        android:background="?attr/selectableItemBackground"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:layout_height="2dp"
        android:layout_width="0dp"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@+id/item_exercise_slot"
        app:layout_constraintLeft_toLeftOf="@+id/item_exercise_slot"
        app:layout_constraintRight_toRightOf="@+id/item_exercise_slot"/>


</android.support.constraint.ConstraintLayout>