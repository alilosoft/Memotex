<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/tutorial_margin"
    tools:background="@color/colorPrimary">

    <TextView
        android:id="@+id/tutorial_level_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tutorial_level_iv"
        app:layout_constraintVertical_chainStyle="packed"
        android:text="@string/tutorial_level"
        android:textSize="@dimen/tutorial_text_size"
        android:textColor="@color/textColorLight"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/tutorial_level_iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tutorial_level_tv"
        app:layout_constraintBottom_toTopOf="@+id/tutorial_exercise_tv"
        android:layout_marginTop="18dp"
        android:layout_width="0dp"
        android:layout_height="44dp"
        app:srcCompat="@drawable/tutorial_level"/>

    <TextView
        android:id="@+id/tutorial_exercise_tv"
        app:layout_constraintTop_toBottomOf="@+id/tutorial_level_iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tutorial_exercise_iv"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:text="@string/tutorial_exercise"
        android:textSize="@dimen/tutorial_text_size"
        android:textColor="@color/textColorLight"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/tutorial_exercise_iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tutorial_exercise_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:layout_height="190dp"
        app:srcCompat="@drawable/tutorial_exercise"/>

</android.support.constraint.ConstraintLayout>